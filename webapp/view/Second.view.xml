<mvc:View
    controllerName="com.incture.mydemoproject1.controller.Second"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="I am second page"
        showNavButton="true"
        navButtonPress="onBack"
    >
        <content>
            <!-- Generally back buttons are showed in the header itself, not in the content. Here just for example -->
            <Button
                id="btn1"
                text="Route to DemoView"
                press="onBack"
                class="sapUiSmallMargin"
            />

            <!-- Text element -->
            <VBox>
                <Text
                    text="Font size - H1"
                    class="sapMH1FontSize"
                    textAlign="Center"
                    width="100%"
                />
                <Text
                    text="Font size - H2"
                    class="sapMH2FontSize"
                    textAlign="Center"
                    width="100%"
                />
                <Text
                    text="Font size - H3"
                    class="sapMH3FontSize"
                    textAlign="Center"
                    width="100%"
                />
                <Text
                    text="Font size - H4"
                    class="sapMH4FontSize"
                    textAlign="Center"
                    width="100%"
                />
                <Text
                    text="Font size - H5"
                    class="sapMH5FontSize"
                    textAlign="Center"
                    width="100%"
                />
                <Text
                    text="Font size - H6"
                    class="sapMH6FontSize"
                    textAlign="Center"
                    width="100%"
                />
            </VBox>

            <!-- Label and Input are combinely used in form elements -->

            <!-- ID naming convention - idXXXYYY -->
            <!-- XXX: name of element in short form, YYY: purpose of the element -->

            <VBox class="sapUiSmallMargin sapUiMediumMarginTop">
                <Text
                    text="Hi! Welcome User"
                    id="idTxtMsg"
                    textAlign="Center"
                    width="100%"
                    class="sapMH3FontSize"
                />
                <FlexBox
                    justifyContent="SpaceAround"
                    alignItems="Center"
                    class="sapUiSmallMarginBottom sapUiMediumMarginTop"
                >
                    <!-- For name -->
                    <HBox alignItems="Center">
                        <Label
                            id="idLblName"
                            text="Enter your name"
                            design="Bold"
                            required="true"
                            class="sapUiSmallMarginEnd"
                        />
                        <Input
                            id="idIpName"
                            width="200px"
                            placeholder="Full name"
                            maxLength="30"
                        />
                    </HBox>

                    <!-- For alignment -->
                    <HBox alignItems="Center">
                        <Label
                            id="idLblAlign"
                            text="Enter alignment"
                            design="Bold"
                            required="true"
                            class="sapUiSmallMarginEnd"
                        />
                        <Input
                            id="idIpAlign"
                            width="200px"
                            placeholder="Alignment"
                            maxLength="30"
                        />
                    </HBox>
                </FlexBox>
                <HBox
                    alignItems="Center"
                    justifyContent="Center"
                >
                    <Button
                        id="idBtnSub"
                        type="Emphasized"
                        text="Submit"
                        press="onSubmit"
                        width="100px"
                        class="sapUiSmallMarginEnd"
                    />

                    <Button
                        id="idBtnHideShow"
                        type="Emphasized"
                        text="Hide"
                        press="onHideShow"
                        width="100px"
                        class="sapUiSmallMarginBegin"
                    />
                </HBox>
            </VBox>
            <HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginTop">
                <Button
                    text="Dialog Button 1"
                    type="Emphasized"
                    press="onDefaultDialog"
                    class="sapUiSmallMarginEnd"
                />
                <Button
                    text="Dialog Button 2"
                    type="Emphasized"
                    press="onOpenDialog"
                    class="sapUiSmallMarginEnd"
                />
            </HBox>
        </content>
    </Page>
</mvc:View>
